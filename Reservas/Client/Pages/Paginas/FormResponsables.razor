<EditForm Model="persona" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Nombre</label>
        <div>
            <InputText class="form-control" @bind-Value="@persona.Nombre" />
            <ValidationMessage For="@(() => persona.Nombre)" />
        </div>

    </div>
    <div class="form-group">
        <label>Apellido</label>
        <div>
            <InputText class="form-control" @bind-Value="@persona.Apellido" />
            <ValidationMessage For="@(() => persona.Apellido)" />
        </div>
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@persona.Telefono" />
            <ValidationMessage For="@(() => persona.Telefono)" />
        </div>
    </div>
    <div class="form-group">
        <label>Mail</label>
        <div>
            <InputText class="form-control" @bind-Value="@persona.Mail" />
            <ValidationMessage For="@(() => persona.Mail)" />
        </div>
    </div>

    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Persona persona { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
