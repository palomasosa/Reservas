<EditForm Model="alojamiento" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Nombre</label>
        <div>
            <InputText class="form-control" @bind-Value="@alojamiento.NombreAlojamiento" />
            <ValidationMessage For="@(() => alojamiento.NombreAlojamiento)" />
        </div>

    </div>
    <div class="form-group">
        <label>Dirección</label>
        <div>
            <InputText class="form-control" @bind-Value="@alojamiento.DireccionAlojamiento" />
            <ValidationMessage For="@(() => alojamiento.DireccionAlojamiento)" />
        </div>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Alojamiento alojamiento { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
